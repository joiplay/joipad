<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layoutDirection="ltr"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:id="@+id/gamepad_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:id="@+id/miscLay"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_96sdp"
            android:layout_alignParentTop="true"
            >
            <RelativeLayout
                android:id="@+id/miscLayChild"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:clickable="true"
                android:focusable="true"
                android:visibility="invisible"
                >
                <LinearLayout
                    android:id="@+id/miscLayChildButtonLay"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_centerInParent="true"
                    android:gravity="center"
                    >
                    <ImageButton
                        android:id="@+id/closeBtn"
                        android:layout_width="@dimen/_24sdp"
                        android:layout_height="@dimen/_24sdp"
                        android:background="@drawable/action_back_square"
                        android:src="@drawable/close"
                        android:layout_marginStart="@dimen/_4sdp"
                        android:layout_marginEnd="@dimen/_4sdp"
                        tools:ignore="ContentDescription"/>
                    <ImageButton
                        android:id="@+id/rotateBtn"
                        android:layout_width="@dimen/_24sdp"
                        android:layout_height="@dimen/_24sdp"
                        android:background="@drawable/action_back_square"
                        android:src="@drawable/rotate"
                        android:layout_marginStart="@dimen/_4sdp"
                        android:layout_marginEnd="@dimen/_4sdp"
                        tools:ignore="ContentDescription"/>
                    <ImageButton
                        android:id="@+id/keyboardBtn"
                        android:layout_width="@dimen/_24sdp"
                        android:layout_height="@dimen/_24sdp"
                        android:background="@drawable/action_back_square"
                        android:src="@drawable/keyboard"
                        android:layout_marginStart="@dimen/_4sdp"
                        android:layout_marginEnd="@dimen/_4sdp"
                        tools:ignore="ContentDescription"/>
                    <ImageButton
                        android:id="@+id/fastforwardBtn"
                        android:layout_width="@dimen/_24sdp"
                        android:layout_height="@dimen/_24sdp"
                        android:background="@drawable/action_back_square"
                        android:src="@drawable/fastforward"
                        android:layout_marginStart="@dimen/_4sdp"
                        android:layout_marginEnd="@dimen/_4sdp"
                        android:visibility="gone"
                        tools:ignore="ContentDescription"/>
                    <ImageButton
                        android:id="@+id/cheatsBtn"
                        android:layout_width="@dimen/_24sdp"
                        android:layout_height="@dimen/_24sdp"
                        android:background="@drawable/action_back_square"
                        android:src="@drawable/flare"
                        android:layout_marginStart="@dimen/_4sdp"
                        android:layout_marginEnd="@dimen/_4sdp"
                        android:visibility="gone"
                        tools:ignore="ContentDescription"/>
                </LinearLayout>
            </RelativeLayout>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/padLay"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/miscLay"
            android:layout_alignParentBottom="true"
            android:background="@android:color/transparent"
            >
            <RelativeLayout
                android:id="@+id/padLayChild"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:clickable="true"
                android:focusable="true"
                android:visibility="invisible"
                android:background="@android:color/transparent">
                <RelativeLayout
                    android:id="@+id/buttonLay"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <RelativeLayout
                        android:id="@+id/binaryLay"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_above="@id/dpad"
                        >
                        <cyou.joiplay.joipad.view.GamePadButton
                            android:id="@+id/lButton"
                            android:layout_width="@dimen/_64sdp"
                            android:layout_height="@dimen/_32sdp"
                            android:layout_marginStart="@dimen/_8sdp"
                            android:layout_marginEnd="@dimen/_8sdp"
                            android:layout_alignParentStart="true"
                            android:background="@drawable/action_back_square"
                            android:scaleType="fitCenter"
                            android:paddingTop="@dimen/_12sdp"
                            android:paddingBottom="@dimen/_12sdp"
                            android:paddingStart="@dimen/_4sdp"
                            android:paddingEnd="@dimen/_4sdp"
                            />
                        <cyou.joiplay.joipad.view.GamePadButton
                            android:id="@+id/rButton"
                            android:layout_width="@dimen/_64sdp"
                            android:layout_height="@dimen/_32sdp"
                            android:layout_marginStart="@dimen/_8sdp"
                            android:layout_marginEnd="@dimen/_8sdp"
                            android:layout_alignParentEnd="true"
                            android:background="@drawable/action_back_square"
                            android:scaleType="fitCenter"
                            android:paddingTop="@dimen/_12sdp"
                            android:paddingBottom="@dimen/_12sdp"
                            android:paddingStart="@dimen/_4sdp"
                            android:paddingEnd="@dimen/_4sdp"
                            />
                    </RelativeLayout>
                    <cyou.joiplay.joipad.view.GamePadDPad
                        android:id="@+id/dpad"
                        android:layout_width="@dimen/_120sdp"
                        android:layout_height="@dimen/_120sdp"
                        android:layout_alignParentBottom="true"
                        android:layout_alignParentStart="true"
                        android:layout_margin="@dimen/_20sdp"
                        android:background="@drawable/dpad_back"
                        android:src="@drawable/dpad_front"
                        android:scaleType="fitXY"
                        android:layout_centerInParent="true"
                        android:clickable="false"
                        android:focusable="false"
                        />
                    <RelativeLayout
                        android:id="@+id/actionLay"
                        android:layout_width="@dimen/_120sdp"
                        android:layout_height="@dimen/_120sdp"
                        android:layout_alignParentBottom="true"
                        android:layout_alignParentEnd="true"
                        android:layout_margin="@dimen/_20sdp">
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_alignParentTop="true"
                            android:layout_centerHorizontal="true"
                            >
                            <cyou.joiplay.joipad.view.GamePadButton
                                android:id="@+id/xButton"
                                android:layout_width="@dimen/_36sdp"
                                android:layout_height="@dimen/_36sdp"
                                android:layout_marginStart="@dimen/_8sdp"
                                android:background="@drawable/action_back_circle"
                                android:layout_margin="@dimen/_5sdp"
                                android:scaleType="fitCenter"
                                android:paddingTop="@dimen/_12sdp"
                                android:paddingBottom="@dimen/_12sdp"
                                android:paddingStart="@dimen/_4sdp"
                                android:paddingEnd="@dimen/_4sdp"
                                />

                            <cyou.joiplay.joipad.view.GamePadButton
                                android:id="@+id/aButton"
                                android:layout_width="@dimen/_36sdp"
                                android:layout_height="@dimen/_36sdp"
                                android:layout_marginStart="@dimen/_8sdp"
                                android:background="@drawable/action_back_circle"
                                android:layout_margin="@dimen/_5sdp"
                                android:scaleType="fitCenter"
                                android:paddingTop="@dimen/_12sdp"
                                android:paddingBottom="@dimen/_12sdp"
                                android:paddingStart="@dimen/_4sdp"
                                android:paddingEnd="@dimen/_4sdp"
                                />

                        </LinearLayout>
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true">
                            <cyou.joiplay.joipad.view.GamePadButton
                                android:id="@+id/yButton"
                                android:layout_width="@dimen/_36sdp"
                                android:layout_height="@dimen/_36sdp"
                                android:background="@drawable/action_back_circle"
                                android:layout_alignParentStart="true"
                                android:layout_centerVertical="true"
                                android:layout_margin="@dimen/_5sdp"
                                android:scaleType="fitCenter"
                                android:paddingTop="@dimen/_12sdp"
                                android:paddingBottom="@dimen/_12sdp"
                                android:paddingStart="@dimen/_4sdp"
                                android:paddingEnd="@dimen/_4sdp"
                                />

                            <cyou.joiplay.joipad.view.GamePadButton
                                android:id="@+id/bButton"
                                android:layout_width="@dimen/_36sdp"
                                android:layout_height="@dimen/_36sdp"
                                android:background="@drawable/action_back_circle"
                                android:layout_margin="@dimen/_5sdp"
                                android:layout_alignParentEnd="true"
                                android:layout_centerVertical="true"
                                android:scaleType="fitCenter"
                                android:paddingTop="@dimen/_12sdp"
                                android:paddingBottom="@dimen/_12sdp"
                                android:paddingStart="@dimen/_4sdp"
                                android:paddingEnd="@dimen/_4sdp"
                                />
                        </RelativeLayout>
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_alignParentBottom="true"
                            android:layout_centerHorizontal="true"
                            >
                            <cyou.joiplay.joipad.view.GamePadButton
                                android:id="@+id/zButton"
                                android:layout_width="@dimen/_36sdp"
                                android:layout_height="@dimen/_36sdp"
                                android:background="@drawable/action_back_circle"
                                android:layout_margin="@dimen/_5sdp"
                                android:scaleType="fitCenter"
                                android:paddingTop="@dimen/_12sdp"
                                android:paddingBottom="@dimen/_12sdp"
                                android:paddingStart="@dimen/_4sdp"
                                android:paddingEnd="@dimen/_4sdp"
                                />
                            <cyou.joiplay.joipad.view.GamePadButton
                                android:id="@+id/cButton"
                                android:layout_width="@dimen/_36sdp"
                                android:layout_height="@dimen/_36sdp"
                                android:background="@drawable/action_back_circle"
                                android:layout_margin="@dimen/_5sdp"
                                android:scaleType="fitCenter"
                                android:paddingTop="@dimen/_12sdp"
                                android:paddingBottom="@dimen/_12sdp"
                                android:paddingStart="@dimen/_4sdp"
                                android:paddingEnd="@dimen/_4sdp"
                                />
                        </LinearLayout>

                    </RelativeLayout>
                </RelativeLayout>
                <LinearLayout
                    android:id="@+id/keyboardLay"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/jColorKeyboard"
                    android:orientation="vertical"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:visibility="invisible"
                    />
            </RelativeLayout>
        </RelativeLayout>
        <ImageButton
            android:id="@+id/topShowButton"
            android:layout_width="@dimen/_20sdp"
            android:layout_height="@dimen/_12sdp"
            android:background="@drawable/hcircle_bottom"
            android:src="@drawable/arrow_down"
            android:scaleType="fitCenter"
            android:layout_centerHorizontal="true"
            android:layout_alignParentTop="true"
            />
        <ImageButton
            android:id="@+id/bottomShowButton"
            android:layout_width="@dimen/_20sdp"
            android:layout_height="@dimen/_12sdp"
            android:background="@drawable/hcircle_top"
            android:src="@drawable/arrow_up"
            android:scaleType="fitCenter"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            />
    </RelativeLayout>
</RelativeLayout>